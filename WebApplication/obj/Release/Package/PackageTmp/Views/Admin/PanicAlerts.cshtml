@model PagedList.IPagedList<thistimepls.Models.PanicAlertViewModel>
@using PagedList.Mvc;
@{
    ViewBag.Title = "PanicAlerts";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>Panic Alerts</h2>
<table class="table">
    <tr>
        <th>
            Name
        </th>

        <th>
            Email
        </th>
        <th>
            Mobile No
        </th>
        <th>
           Worked At
        </th>

        <th>
            Organization Name
        </th>
        <th>
            Address
        </th>
        <th>
           Role
        </th>
        <th>
            Alert Date 
        </th>
     
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>


            <td>
                @Html.DisplayFor(modelItem => item.UserDetail.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserDetail.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserDetail.mobilde)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserDetail.workat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserDetail.orgname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserDetail.station)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserDetail.role)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.PanicAttackdetail.panic_date)
            </td>
           
            <td>

                @Html.ActionLink("ViewDetails", "ProcessAlert", new { Attackid = item.PanicAttackdetail.PanicAttack_Id, Userid = item.PanicAttackdetail.User_Id }) 
                

            </td>
        </tr>
    }

</table>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("PanicAlerts",
    new { page }))
