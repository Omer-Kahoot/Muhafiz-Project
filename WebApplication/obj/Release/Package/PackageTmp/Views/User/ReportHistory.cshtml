@model PagedList.IPagedList<thistimepls.Models.ThreatReportViewModel>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ReportHistory";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>ReortHistor</h2>

<div class="row">
    <div class="form-group">
        <div class="col-md-offset-5">
            <h2> Previous Reports</h2>
        </div>

    </div>
</div>

<table class="table">
    <tr>
        <th>
            ThreatID

        </th>
        <th>
           ReportDate

        </th>

        <th>
          ThreatLevel
        </th>
        


        <th></th>
    </tr>
    
    @foreach (var item in Model)
    {
        
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Threat.ThreatReport_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Threat.ReportDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Threat.Level_Of_Threat)
            </td>
           
            <td>

                <span class="glyphicon glyphicon-alert "></span>

            </td>
        </tr>
    }

</table>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("ReportHistory",
    new { page }))
