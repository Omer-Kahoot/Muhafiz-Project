@model thistimepls.Models.Admin
@{
    ViewBag.Title = "AdminLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AdminLogin", "Home", FormMethod.Post))
{    <div class="login-page">
        <div class="form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.TextBoxFor(m => m.UserName, new { placeholder = Html.DisplayNameFor(n => n.UserName) })
            @Html.PasswordFor(m => m.Password, new { placeholder = Html.DisplayNameFor(n => n.Password) })
            <input type="submit" value="AdminLogin" id="submit" />
            <p style="color:red">@ViewBag.message</p>
            <p class="message">User? @Html.ActionLink("LogIn here", "Login", "Home")</p>

        </div>

    </div>   
    
}
